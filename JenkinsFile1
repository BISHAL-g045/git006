pipeline {
agent any
environment {
        DOCKERHUB_CREDENTIAL = credentials('mydockerhub')
    }

stages {
  
  stage("Build Nodejs Image") {
    steps {
        sh 'docker build -t nodejs .'
        sh 'docker ps'
    }
}
  
  stage ("Delivery of Image to Docker Hub") {
    steps {
      sh "docker login -u ${DOCKERHUB_CREDENTIAL_USR} -p ${DOCKERHUB_CREDENTIAL_PSW}"
      sh 'docker image tag nodejs bishalg01/nodejs:1.0'
      sh 'docker push bishalg01/nodejs:1.0'
    }
  }
  
    stage ("Deployment to Kubernetes") {
    steps {
     sh 'kubectl create -f k8.yml'
    }
  }
}
}
